<% if user.errors.present? %>
  <div class="alert alert-danger" id="error_explanation">
    <h1>
      The form contains <%= pluralize(user.errors.count, "error") %>.
    </h1>
    <ul>
      <% user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
