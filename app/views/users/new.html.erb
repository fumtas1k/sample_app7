<% provide(:title, "Sign up") %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render "shared/error_messages", user: @user %>
      <%= f.text_field :name, class: "form-control", required: true, placeholder: User.human_attribute_name(:name) %>
      <%= f.email_field :email, class: "form-control", required: true, placeholder: User.human_attribute_name(:email) %>
      <%= f.password_field :password, class: "form-control", required: true, placeholder: User.human_attribute_name(:password) %>
      <%= f.password_field :password_confirmation, class: "form-control", required: true, placeholder: User.human_attribute_name(:password_confirmation) %>
      <div class="d-grid d-block">
        <%= f.submit class:"btn btn-primary d-block" %>
      </div>
    <% end %>
  </div>
</div>
