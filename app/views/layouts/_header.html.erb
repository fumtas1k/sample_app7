<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <%= link_to "sample app", root_path, id: "logo", class: "navbar-brand" %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <%= link_to t("views.header.home"), home_path, class: "nav-link" %>
          <%= link_to t("views.header.help"), help_path, class: "nav-link" %>
          <% if logged_in? %>
            <%= link_to t("views.header.users"), "#", class: "nav-link dropdown-toggle", id: "navbarDropdown", role: "button", "data-bs-toggle": "dropdown", "aria-expanded": false %>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <li><%= link_to t("views.header.profile"), user_path(current_user), class: "dropdown-item" %></li>
              <li><%= link_to t("views.header.settings"), "#", class: "dropdown-item" %></li>
              <li><hr class="dropdown-divider"></li>
              <li>
                <%= link_to t("views.header.log_out"), logout_path, class: "dropdown-item", data: { turbo_method: :delete } %>
                <%# <%= button_to t("views.header.log_out"), logout_path, class: "dropdown-item", method: :delete, form: { data: { turbo_confirm: "Are you sure?" }} %>
              </li>
            </ul>
          <% else %>
            <%= link_to t("views.header.log_in"), login_path, class: "nav-link" %>
          <% end %>
        </div>
      </div>
    </div>
  </nav>
</header>
